{
  "name": "glimpse-graphics",
  "version": "1.0.0",
  "description": "NodeCG Graphics bundle for RPI TV Glimpse",
  "homepage": "https://rpi.tv/",
  "bugs": {
    "url": "https://github.com/rpitv/glimpse-graphics/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rpitv/glimpse-graphics.git"
  },
  "license": "MIT",
  "scripts": {
    "autofix": "run-s autofix:*",
    "build": "run-s clean build:*",
    "build:browser": "vite build",
    "build:extension": "tsc -b tsconfig.extension.json",
    "clean": "rm -rf node_modules/.cache && rm -rf shared/dist && rm -rf dashboard && rm -rf graphics && rm -rf extension",
    "schema-types": "nodecg schema-types",
    "start": "node ../..",
    "watch": "run-p watch:*",
    "watch:browser": "vite",
    "watch:extension": "tsc -b tsconfig.extension.json -w"
  },
  "dependencies": {
    "module-alias": "^2.2.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/node": "^16.11.47",
    "@types/uuid": "^8.3.4",
    "@vitejs/plugin-vue": "^2.3.3",
    "globby": "^13.1.2",
    "naive-ui": "^2.32.1",
    "nodecg-cli": "^8.0.1",
    "nodecg-types": "^1.9.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.54.4",
    "typescript": "^4.7.4",
    "vite": "^2.9.14",
    "vite-plugin-checker": "^0.4.9",
    "vite-plugin-nodecg": "^1.0.2",
    "vue": "^3.2.37",
    "vue-tsc": "^0.39.5"
  },
  "nodecg": {
    "compatibleRange": "^1.9.0",
    "dashboardPanels": [
      {
        "name": "game-settings",
        "title": "Game Settings",
        "file": "game-settings.html",
        "workspace": "General",
        "width": "8"
      },
      {
        "name": "score",
        "title": "Score",
        "file": "score.html",
        "workspace": "Scoreboard",
        "width": "6"
      },
      {
        "name": "clock",
        "title": "Clock",
        "file": "clock.html",
        "workspace": "Scoreboard",
        "width": "4"
      }
    ],
    "graphics": [
      {
        "file": "glimpse.html",
        "width": 3840,
        "height": 2160
      }
    ]
  }
}
